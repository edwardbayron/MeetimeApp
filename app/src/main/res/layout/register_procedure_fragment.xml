<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/register_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/register_year_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:theme="@style/Theme.MaterialComponents"

            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/register_month_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Month"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/register_year_til"
            app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/register_day_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Day"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/register_month_til"
            app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number_et_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your phone number"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/register_month_til"
            app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/number_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstName_et_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your phone number"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/number_et_til"
            app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastName_et_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/firstName_et_til"
            app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textColor="@color/cmn_black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:theme="@style/FormButton"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lastName_et_til" />


</androidx.constraintlayout.widget.ConstraintLayout>