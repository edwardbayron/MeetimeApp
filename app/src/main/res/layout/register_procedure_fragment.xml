<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/register_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/register_year"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                tools:text="2019"
                android:background="@drawable/date_item_card"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/cmn_black"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"

        />


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/register_month"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                tools:text="October"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/cmn_black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_year"

                android:paddingLeft="15dp"
                android:background="@drawable/date_item_card"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/register_day"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                tools:text="15"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/cmn_black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_month"
                android:textSize="24sp"
                android:paddingLeft="15dp"
                android:background="@drawable/date_item_card"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/number_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/cmn_black"
                android:hint="Your phone number"
                app:layout_constraintTop_toBottomOf="@id/register_day"
                android:textColorHint="@color/cmn_black"
                tools:ignore="LabelFor"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/firstName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/cmn_black"
                android:hint="Your first name"
                app:layout_constraintTop_toBottomOf="@id/number_et"
                android:textColorHint="@color/cmn_black"
                tools:ignore="LabelFor"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lastName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:autofillHints="gfdg" android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/firstName_et"
                android:textColor="@color/cmn_black"
                android:hint="Your last name"
                android:textColorHint="@color/cmn_black"
                tools:ignore="LabelFor"/>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/lastName_et"
        />


</androidx.constraintlayout.widget.ConstraintLayout>